---
import Img from "./img.astro";

const { title, description, avatar, name, job } = Astro.props;
---

<div class="p-4 shadow-custom rounded-lg">
    <div class="bg-mixed text-white font-bold text-xl p-6 text-center rounded-lg">{title}</div>

    <p class="text-lg text-center mt-3 italic font-thin">{description}</p>

    <div class=" mt-14">
        <Img class="w-20 h-20 border rounded-full border-mixed p-2 m-auto" src={avatar} />
        <p class="text-xl font-black text-center mt-5">{name}</p>
        <p class="text-lg font-thin text-center">{job}</p>
    </div>
</div>
