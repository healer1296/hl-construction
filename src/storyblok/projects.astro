---
import { storyblokEditable } from "@storyblok/astro";

const { blok } = Astro.props;
---

<section {...storyblokEditable(blok)} class="bg-slate-50 h-screen w-full pt-10">
    <div class="max-w-5xl m-auto">
        <h1 class="text-5xl font-bold text-center">{blok.title}</h1>

        <div class="w-full m-auto h-px bg-slate-300 mt-5">
            <div
                class="absolute w-1/4 z-10 left-1/2 -translate-x-1/2 bg-dark h-0.5"
            >
            </div>
        </div>

        <p class="text-center text-xl mt-5">{blok.subtitle}</p>

        <div class="mt-20 grid grid-cols-3 gap-4">
            <img src={blok.image_1.filename} alt={blok.image_1.alt} />
            <img src={blok.image_2.filename} alt={blok.image_2.alt} />
            <img src={blok.image_3.filename} alt={blok.image_3.alt} />
            <img src={blok.image_4.filename} alt={blok.image_4.alt} />
            <img src={blok.image_5.filename} alt={blok.image_5.alt} />
            <img src={blok.image_6.filename} alt={blok.image_6.alt} />
            
        </div>
    </div>
</section>
