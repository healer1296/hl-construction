---
import { storyblokEditable } from "@storyblok/astro";
import StoryblokComponent from "@storyblok/astro/StoryblokComponent.astro";

const { blok } = Astro.props;
---

<section
    {...storyblokEditable(blok)}
    class="h-screen w-full pt-10 max-w-5xl m-auto"
>
    <h1 class="text-5xl font-bold text-center">
        {blok.title}
    </h1>
    <div class="w-full m-auto h-px bg-slate-300 mt-5">
        <div
            class="absolute w-1/4 z-10 left-1/2 -translate-x-1/2 bg-dark h-0.5"
        >
        </div>
    </div>

    <p class="text-center text-xl mt-5">{blok.subtitle}</p>

    <div class="mt-20 grid grid-cols-3 gap-5">
        {
            blok.card?.map((blok: any) => {
                return <StoryblokComponent blok={blok} />;
            })
        }
    </div>
</section>
