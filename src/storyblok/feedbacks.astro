---
import { storyblokEditable } from '@storyblok/astro';
import StoryblokComponent from '@storyblok/astro/StoryblokComponent.astro';

const { blok } = Astro.props;
---

<section {...storyblokEditable(blok)} class="w-full xl:h-screen pt-10 max-w-[22rem] xl:max-w-5xl m-auto mb-10">
  <h1 class="text-2xl xl:text-5xl font-semibold text-center">
    {blok.title}
  </h1>
  <div class="w-full m-auto h-px bg-slate-300 mt-5">
    <div class="absolute w-1/4 z-10 left-1/2 -translate-x-1/2 bg-dark h-0.5"></div>
  </div>

  <p class="text-center mt-5 xl:text-xl">{blok.subtitle}</p>

  <div class="mt-10 xl:mt-20 xl:grid xl:grid-cols-3 xl:gap-5">
    {
      blok.card?.map((blok: any) => {
        return <StoryblokComponent blok={blok} />;
      })
    }
  </div>
</section>
